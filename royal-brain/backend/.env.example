# Backend env template
# Preferred: set these in the repo root .env.<env> files (used by app.core.config).

# Database Configuration
DATABASE_URL=sqlite:///./rb_dev.db
# For production PostgreSQL, use:
# DATABASE_URL=postgresql+psycopg://USER:PASSWORD@HOST:5432/royal_brain

# JWT / Auth
JWT_SECRET=your_secret_key_here_change_in_production_use_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Admin Bootstrap (optional)
BOOTSTRAP_ADMIN_EMAIL=admin@royalbrain.ai
BOOTSTRAP_ADMIN_PASSWORD=changeme_in_production

# OpenAI API (optional)
OPENAI_API_KEY=

# EVM blockchain anchoring (optional)
EVM_RPC_URL=
EVM_CHAIN_ID=
EVM_PRIVATE_KEY=
EVM_EXPLORER_TX_URL_BASE=

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Environment
RB_ENV=dev
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
